<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="org.elsys.checksplitter.MainActivity">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/action_btn"
        android:text="Capture image"
        android:background="#167865"
        android:layout_marginBottom="138dp"
        android:layout_above="@+id/instruction"
        android:layout_alignLeft="@+id/gallery_image"
        android:layout_alignStart="@+id/gallery_image">
    </Button>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/gallery_image"
        android:text="Pick from gallery"
        android:background="#167865"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/action_btn"
        android:layout_centerHorizontal="true">
    </Button>

    <TextView
        android:id="@+id/instruction"
        android:textSize="7pt"
        android:textColor="#111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSTRUCTION: Don't rotate screen when taking a picture. You may see black screen when the image is processing."
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/change_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="" />


</RelativeLayout>
